source 'https://rubygems.org'

gem 'github-pages', group: :jekyll_plugins

# Needed for local `jekyll serve` on modern Ruby.
gem 'webrick', '~> 1.8'

# Ruby 4 no longer ships `csv` as a default gem, but Jekyll 3.x requires it.
gem 'csv'

# Ruby 4 no longer ships `bigdecimal` as a default gem, but Liquid requires it.
gem 'bigdecimal'